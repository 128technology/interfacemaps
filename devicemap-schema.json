{
    "type": "object",
    "properties": {
      "description": {
        "type": "string"
      },
      "clei": {
        "type": "string"
      },
      "part_number": {
        "type": "string"
      },
      "ethernet": {
        "type": "array",
        "items": {
          "type": "object",
          "allOf": [
            {
              "$ref": "#/$defs/baseInterface"
            }
          ],
          "properties": {
            "name": {
              "type": "string",
              "pattern": "^(ge|xe|mgmt)-[0-9]+(-[0-9]+)?$"
            },
            "type": {
              "type": "string",
              "enum": [
                "WAN",
                "LAN",
                "HASync",
                "HAFabric",
                "MGMT",
                "UNUSED",
                "IGNORE"
              ]
            },
            "speed": {
              "type": "integer",
              "minimum": 0
            },
            "address": {
              "type": "string",
              "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}(\/([0-9]|[1-2][0-9]|3[0-2]))?$"
            }
          },
          "required": [
            "name",
            "type"
          ],
          "oneOf": [
            {
              "properties": {
                "pciAddress": {
                  "type": "string",
                  "pattern": "^[0-9a-fA-F]{4}(:[0-9a-fA-F]{2}){2}\\.[0-7]$"
                },
                "vmbusId": {
                    "type": "null"
                }
              },
              "required": [
                "pciAddress"
              ]
            },
            {
              "properties": {
                "pciAddress": {
                    "type": "null"
                },
                "vmbusId": {
                  "type": "string",
                  "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                }
              },
              "required": [
                "vmbusId"
              ]
            }
          ]
        }
      },
      "lte": {
        "type": "array",
        "items": {
          "type": "object",
          "allOf": [
            {
              "$ref": "#/$defs/baseInterface"
            }
          ],
          "properties": {
            "name": {
              "type": "string",
              "pattern": "^lte-[0-9]+(-[0-9]+)?$"
            },
            "type": {
              "type": "string",
              "enum": [
                "WAN",
                "UNUSED",
                "IGNORE"
              ]
            },
            "targetInterface": {
              "type": "string",
              "pattern": "^[^/:\\s]+$"
            }
          },
          "required": [
            "name",
            "type",
            "targetInterface"
          ]
        }
      },
      "alias": {
        "type": "object",
        "properties": {
          "vendor": {
            "type": "string"
          },
          "sku": {
            "type": "string"
          }
        },
        "required": [
          "vendor",
          "sku"
        ],
        "additionalProperties": false
      },
      "source": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "$defs": {
      "baseInterface": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "bcpNetwork": {
            "type": "object",
            "description": "A set of templates that may be used to form a \"best common practice\" network",
            "patternProperties": {
              "^[a-zA-Z0-9]+$": {
                "$ref": "#/$defs/bcpNetworkTemplate"
              }
            }
          }
        }
      },
      "bcpNetworkTemplate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the interface when used by this BCP template"
          },
          "description": {
            "type": "string",
            "description": "The description of the interface when used by this BCP template"
          }
        }
      }
    }
  }
  